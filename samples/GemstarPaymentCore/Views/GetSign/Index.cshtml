@model SignViewModel
@{
    Layout = null;
    ViewBag.Title = "计算加密签名";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <div class="container">
        <main role="main" class="pb-3">
            <h2>@ViewBag.Title</h2>
            <form asp-controller="GetSign" asp-action="CalcSign" method="post">
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Content">加密内容：(加密内容一般是各种收款账号，来源于签约后的邮件通知或者相应的商户后台)</label>
                    <input type="text" class="form-control" asp-for="Content" />
                </div>
                <div class="form-group">
                    <label asp-for="Key">加密密钥：(加密密钥是用户序列号，线下用户的比如SZKAIFHOTEL,线上的比如000001，来源于今目标主线)</label>
                    <input type="text" class="form-control" asp-for="Key" />
                </div>
                <div class="form-group">
                    <label for="encrypted">加密结果：(加密结果需要写回主线，做为收款账号，明文的收款账号将不能正常收款)</label>
                    <input type="text" class="form-control" id="encrypted" />
                </div>
                <button type="button" class="btn btn-primary" id="calcButton">计算加密结果</button>
            </form>
            <hr />
            <p>
                需要加密的内容：支付宝appId,支付宝pId,扫呗商户号，微信子商户号
            </p>
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2018 - 捷信达版权所有
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script type="text/javascript">
        $(function () {
            $("#calcButton").click(function (e) {
                e.preventDefault();
                var content = $("#Content").val();
                var key = $("#Key").val();

                if (!content) {
                    alert("请输入加密内容");
                    return;
                }
                if (!key) {
                    alert("请输入加密密钥");
                    return;
                }
                var url = $("form").attr("action");
                $("#encrypted").val("");
                $.post(url, { Content: content, Key: key }, function (data) {
                    if (data.success) {
                        $("#encrypted").val(data.data);
                    } else {
                        alert("计算加密结果失败，原因："+data.data);
                    }
                }, "json");
            });
        });
    </script>
</body>
</html>
